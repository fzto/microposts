<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <div class="col-md-6 col-md-offset-4">
        <div class="profile_info"><label class="col-md-2">Name:</label><div class="col-md-10"><%= @user.name %></div></div>
        <div class="profile_info"><label class="col-md-2">Email:</label><div class="col-md-10"><%= @user.email %></div></div>
        <div class="profile_info"><label class="col-md-2">Location:</label><div class="col-md-10"><%= @user.location %></div></div>
        <div class="profile_info"><label class="col-md-2">URL:</label><div class="col-md-10"><%= @user.url %></div></div>
        <div class="profile_info"><label class="col-md-2">Description:</label><div class="col-md-10"><%= @user.profile %></div></div>
        <div class="btn col-md-12"><%= link_to "edit profile", edit_user_path(current_user) %></div>
    </div>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>